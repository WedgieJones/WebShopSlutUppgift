@page
@model Webshop.UI.Pages.OrderModel
@{
}
<h2>Hej @Model.customer.FirstName, här är din order!</h2>

<div>
    @foreach (var products in Model.orderList)
    {
<tbody>
    <tr>
      <td class="item">
         <div class="">
         <h3 class="card-title">@products.ProductName | Pris: @products.CurrentPrice kr</h3>
         @{Model.totalSum.Add(@products.CurrentPrice);}
      </td>
   </tr>
</tbody>
}
<h4>Total amount is @Model.totalSum.Sum() kr</h4>
</div> 