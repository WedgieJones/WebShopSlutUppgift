@page
@model Webshop.UI.Pages.AllProductsModel
@{
}

<form method="get">
    <div class="form-group">
        <div class="input-group">
            <input type="search" class="form-control" value="" />
            <span class="input-group-btn">
                <button class="btn btn-default">
                    <i class="glyphicon glyphicon-search"></i>
                </button>
            </span>
        </div>
    </div>
   </form>

<div class="card-deck">
    @foreach (var products in Model.Products)
    {
    <div class="row">
        <div class="col">
            <div class="card" style="max-width: auto; max-height: auto;">
                <img src="@products.Image" class="card-img-top" style="max-height:auto" alt="...">
                <div class="card-body">
                    <h5 class="card-title">@products.ProductName</h5>
                    <p class="card-text">@products.ProductDescription </p>
                    <h5 class="card-title">Pris: @products.CurrentPrice kr</h5>
                    <a href="#" class="btn btn-primary">Add to Cart</a>
                </div>
            </div>
            <br>
        </div>
        <br>
    </div>        
    }
    </div>
