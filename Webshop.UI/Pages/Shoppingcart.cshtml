@page
@model Webshop.UI.Pages.ShoppingcartModel
@{
}
<div class="card-deck">
    @foreach (var products in Model.CartList)
    {
        <div class="row">

            <div class="col">
                <div class="card" style="max-width: 18rem; max-height: 45vh;">
                    <img src="@products.Image" class="card-img-top" style="max-height:20vh" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">@products.ProductName</h5>
                        <p class="card-text">@products.ProductDescription </p>
                        <h5 class="card-title">Pris: @products.CurrentPrice kr</h5>
                     
                    </div>
                </div>
                <br>
            </div>
            <br>
        </div>
    }
  
</div> 
<div class="container-fluid">
         <h3>Choose user to proceed with the order</h3>

    @foreach (var customer in Model.CustomerList)
    {
<tbody>
    <tr>
      <td class="item">
         <div class="">
         <h5 class="card-title">@customer.FullName</h5>
         <a asp-page="Order" asp-route-customerId="@customer.CustomerId" class="btn btn-primary">Choose</a>
      </td>
   </tr>
</tbody>
}

</div>
